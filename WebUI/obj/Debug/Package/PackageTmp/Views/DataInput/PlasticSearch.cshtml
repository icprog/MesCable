    @Styles.Render("~/Content/bootstrap-datepicker")
    @Styles.Render("~/Content/icheck-square-green")
    @Styles.Render("~/Content/bootstrap-table")
}
@section Header{
    <style>
        .center {
            width: auto;
            display: table;
            margin-left: auto;
            margin-right: auto;
        }

        .no-border-left {
            border-left: 0px !important;
        }

        .no-border-right {
            border-right: 0px !important;
        }

        .text-center {
            text-align: center;
        }



        .no-border {
