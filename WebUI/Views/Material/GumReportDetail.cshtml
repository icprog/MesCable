            </tr>
            <tr>
                <td>检验员：</td>
                <td colspan="4"><input class="form-control" /></td>
                <td>审核：</td>
                <td colspan="2"><input class="form-control" /></td>
            </tr>

           

        </table>
    </div>
</body>


@section Footer{
    @Scripts.Render("~/Scripts/icheck")
    @Scripts.Render("~/Scripts/bootstrap-datepicker")
    @Scripts.Render("~/Scripts/bootstrap-switch")


    <script>
        var id =  @Model;
        $(function(mcAdmin){
            var $table = $("#report_table");
            function setInputCheck($input,isCheckedFlag){
                if(isCheckedFlag == 1){
                    $input.iCheck("check")
                }
            }



            $('input').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
                increaseArea: '20%' // optional
            });


            $.post("/Material/GetReportDetailAction/",{id:id},function(retData){
                if(retData.Code == RESULT_CODE.OK){
                    var remark = retData.Appendix.remark;
                    var report = retData.Appendix.report;
                    console.log(report)
                    var index = 0;

                    //填写普通字段
                    $table.find("input").each(function(i,v){
                        if ($(v).attr("type") == "radio"
                            || $(v).attr("type") == "checkbox") {
                            return;
                        }
                        $(v).val(report[index++]);
                    })
                    index - 1;

                    $table.find("input").each(function(i,v){
                        if ($(v).attr("type") == "radio" ||  $(v).attr("type") == "checkbox") {
                            setInputCheck($(v),+report[index++]);
                        }
                    })

                    $table.css("display","inline")

                }else{
                    swal({
                        title: "错误",
                        text: "导航失败",
                        type: "error"
                    });
                }
            })
        }(window.parent.mcAdmin))
    </script>
}