                $("#pd_table").append(standRow);
                $("#pd_table").append(actualRow);
                console.log("添加成功");

            })

            function autoFillTable() {
                $("#product").find("input").each(function (i, v) {
                    $(v).val(i);
                })
                $("#product").find("textarea").each(function (i, v) {
                    $(v).val(i);
                })
            }
        }(window.parent.mcAdmin))
    </script>
