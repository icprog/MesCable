@section Footer{
    @Scripts.Render("~/Scripts/bootstrap-datepicker")


    <script>
        $(function (mcAdmin) {

            $('.input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });


            //提交数据
            $("#pd_submit").on("click", function () {
                var product = $("#product").serializeForm();
               
                if (product.VolNum+"" == "" || product.InputDate+"" == "") {
                    swal({
                        title: "抱歉",
                        text: "请输入盘号和时间",
                        type: "error"
                    })
                }
                $.post("/DataInput/AddProductReportAction", { product: product }, function (retDAta) {
                    mcAdmin.dealRetData(retDAta);
                })
            })

            $("#pd_add_row_btn").click(function () {

                var standRow = `<tr>
                <td rowspan="2" ><input class="form-control" /></td>
